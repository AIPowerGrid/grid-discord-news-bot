# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Channel ID for posting news
NEWS_CHANNEL_ID=your_discord_channel_id_here

# AI Power Grid API Key
GRID_API_KEY=your_grid_api_key_here

# News update frequency in minutes
UPDATE_FREQUENCY=60

# AI Power Grid Models
TEXT_MODEL=grid/llama-3.3-70b-versatile
IMAGE_MODEL=Flux.1-Schnell fp8 (Compact)

# Feature toggles
ENABLE_POLLS=false

# News sources (comma-separated format: name|url)
NEWS_FEEDS="BBC News|http://feeds.bbci.co.uk/news/world/rss.xml,CNN|http://rss.cnn.com/rss/edition.rss"

# News enhancement prompt
NEWS_ENHANCEMENT_PROMPT=Write a brief, factual news summary based on this headline: '{headline}' and these details: '{summary}'

# News response prompt for user questions
NEWS_RESPONSE_PROMPT=The user asked: '{{question}}'. Based on the following article(s): {{articlesContext}}

# Image generation prompt template
IMAGE_PROMPT_TEMPLATE=Professional news illustration for: {{headline}}

# Poll assessment prompt
POLL_PROMPT=Is this news story good for a poll? Headline: {{headline}} Article: {{article}}

# LLM-Assisted Image Prompt Generation
LLM_ASSISTED_IMAGE_PROMPT_GENERATION=Based on the news headline: '{{headline}}', generate a concise image prompt 